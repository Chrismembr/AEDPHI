<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margintopcard"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="@dimen/cardelevation"
    android:foreground="?android:attr/selectableItemBackground">//Agrega animacion caracteristica de material design
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margenlinearlayout">
        <ImageView
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:src="@drawable/planner"
            android:id="@+id/imgfunc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margenlinearlayout"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/funcion"
            android:textSize="20sp"
            android:id="@+id/tvfunc"/>
    </LinearLayout>

    </android.support.v7.widget.CardView>